      <textarea placeholder="{{compile placeholder}}" class="textEntry-audio-item-textbox" cols="2" rows="10"></textarea>
  	</div>
    <div class="buttons">
      <button class="textEntry-audio-button button" aria-label="{{_buttons._submit.ariaLabel}}">
